<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 
    android:id="@+id/header_zamowienie">

<Spinner
    android:id="@+id/spinner_lokale"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="false"
    android:layout_alignParentRight="true"
    android:layout_alignParentStart="false" />

     <Button
         android:id="@+id/button_prodwroc"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Wróć" />

   <ListView
       android:id="@+id/list"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_above="@id/spinner_lokale"
       android:layout_below="@id/button_prodwroc" >
	  
    </ListView>

   <Button
       android:id="@+id/button_proddalej"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:text="Dalej" />

   <TextView
       android:id="@+id/hist_zamo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/list"
       android:text="Wybierz Lokal"
       android:textAppearance="?android:attr/textAppearanceSmall" />
    
</RelativeLayout >
