<?xml version="1.0" encoding="utf-8"?>


<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context="com.example.bgm.geekchat.YourProfile"
    android:gravity="center_horizontal">



  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="100dp"
      android:orientation="horizontal"
      android:layout_marginTop="50dp"
      android:layout_gravity="center"
      >
      <ImageButton
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginEnd="30dp"
          android:src="@drawable/ic_keyboard_arrow_left_black_36dp"
          android:id="@+id/lefRandom"
          android:background="@null"
          />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/newprofileAvatar"
        android:src="@drawable/avatar"

        />
      <ImageButton
          android:layout_width="match_parent"
          android:id="@+id/rightRandom"
          android:layout_height="match_parent"
          android:layout_marginStart="30dp"
          android:src="@drawable/ic_keyboard_arrow_right_black_36dp"
          android:background="@null"
          />
  </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random your avatar !"
        android:textSize="15sp"
        android:textColor="#717171"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="Your name"
        android:layout_marginTop="50dp"
        android:id="@+id/firstNameProfile"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your nickname"
        android:textSize="20sp"
        android:textColor="#717171"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="#5a91de"
        android:textColor="#ffffff"
        android:id="@+id/firstDataNext"
        />

</LinearLayout>

